{
  "extends": "facile",
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "@typescript-eslint/no-shadow": "off",
    "import/order": [
      "error",
      {
        "alphabetize": { "caseInsensitive": true },
        "groups": ["builtin", "external", "index", "parent", "sibling"]
      }
    ],
    "no-shadow": "off"
  }
}
